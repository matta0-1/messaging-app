<% layout='layout' %>
    <% title='Change Email' %>

        <div class="d-flex justify-content-center mt-5">
            <div class="card shadow-sm p-4" style="max-width: 420px; width: 100%;">
                <h3 class="text-center mb-4">Change Email</h3>

                <% if (error) { %>
                    <div class="alert alert-danger text-center mb-3">
                        <%= error %>
                    </div>
                    <% } %>

                        <form action="/users/change-email" method="POST">
                            <input type="hidden" name="_method" value="PUT">

                            <div class="mb-4">
                                <input type="email" name="email" class="form-control form-control-lg rounded-pill"
                                    placeholder="New Email" required>
                            </div>

                            <button class="btn btn-primary btn-lg rounded-pill w-100">Update Email</button>
                        </form>
            </div>
        </div>
